@model IngredientsModel

<form action="/potion/mix" method="post">
    
    <!--Iterates through each model object and displays its name-->
    @for (var i = 0; i < Model.ALL.Count; i++) {
        <a href="/potion/ingredient/@i">
            @Model.ALL[i].Name;
        </a><input type="checkbox" value="@Model.ALL[i].Name" name="ingredients" />
        <br />
    }

    <input type="submit" value="mix" />
</form>
